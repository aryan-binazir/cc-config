{
  "permissions": {
    "allow": [
      "Bash",
      "WebFetch",
      "WebSearch",
      "Read",
      "Glob",
      "Grep",
      "LS",
      "NotebookRead",
      "TodoRead",
      "Write",
      "Edit",
      "MultiEdit",
      "Create",
      "Bash(go:*)",
      "Bash(python:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(pip:*)",
      "Bash(docker:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(make:*)",
      "Bash(gradle:*)",
      "Bash(mvn:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(jest:*)",
      "Bash(pytest:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(black:*)",
      "Bash(ruff:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(redis-cli:*)",
      "Bash(mongosh:*)",
      "Bash(aws:*)",
      "Bash(gcloud:*)",
      "Bash(az:*)",
      "Bash(terraform:*)",
      "Bash(kubectl:*)"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(rm)",
      "Bash(rm -rf:*)",
      "Bash(rm -rf /)",
      "Bash(git add:*)",
      "Bash(git add)",
      "Bash(git commit:*)",
      "Bash(git commit)",
      "Bash(git push:*)",
      "Bash(git push)",
      "Bash(dd if=:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(mkfs:*)",
      "Bash(docker rm -f:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/load-context.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "Notion@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
